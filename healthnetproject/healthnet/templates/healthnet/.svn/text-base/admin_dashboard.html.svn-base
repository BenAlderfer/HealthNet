{% extends 'healthnet/dashboard.html' %}
{% block dashboard-info %}
    <section class="row card-dashboard-row">
        <div id="admin_awaiting" class="card card-dashboard-cell dashboard-third-card">
            <h2>Staff Awaiting Approval</h2>
            {% if a_nurses or a_doctors %}
                <ul>
                    {% for awaiting_item in a_nurses %}
                        <li class="margin-left"><a href="/nurse/{{ awaiting_item.pk }}">Nurse {{ awaiting_item }}</a></li>
                    {% endfor %}
                    {% for awaiting_item in a_doctors %}
                        <li class="margin-left"><a href="/doctor/{{ awaiting_item.pk }}">Doctor {{ awaiting_item }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>No staff members are waiting approval.</p>
            {% endif %}
        </div>
        <div id="admin_doctors" class="card card-dashboard-cell dashboard-third-card">
            <h2>Doctors</h2>
            {% if doctor_list %}
                <ul class="container">
                    {% for doctor_item in doctor_list %}
                        <li><a href="/doctor/{{ doctor_item.pk }}">{{ doctor_item }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>No doctors are registered.</p>
            {% endif %}
        </div>
        <div id="admin_nurses" class="card card-dashboard-cell dashboard-third-card">
            <h2>Nurses</h2>
            {% if nurse_list %}
                <ul class="container">
                    {% for nurse_item in nurse_list %}
                    <li><a href="/nurse/{{ nurse_item.pk }}">{{ nurse_item }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>No nurses are registered.</p>
            {% endif %}
        </div>
    </section>
    <section class="row" style="margin:  0 -10px 0 0;">
            <div id="log" class="card">
                <h2>Hospital Events</h2>
                {% if log %}
                    <ul class="container">
                        {% for event in log %}
                        <li>
                            Event: {{event.description}} <br>
                            Generated By: {{event.generatedby}} on {{event.time}} <br>
                        </li>
                        {% endfor %}
                    </ul>
                    <a href="/users/log/{{ pk }}" class="btn btn-primary margin-right margin-top">View Full Log</a>
                    <a href="/healthnet/stats/{{ pk }}" class="btn btn-primary margin-top">View System Statistics</a>
                {% else %}
                    <p>No system events to report.</p>
                {% endif %}
            </div>
    </section>
{% endblock %}
{% block other_scripts %}
    {% load staticfiles %}
    <script src="{% static 'healthnet/js/notifications.js' %}"></script>
{% endblock %}